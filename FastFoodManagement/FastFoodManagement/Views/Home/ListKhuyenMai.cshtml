@model List<FastFoodManagement.Models.KhuyenMai>

@{
    ViewBag.Title = "ListKhuyenMai";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<h4>Khuyến mãi đang được áp dụng</h4>
<div class="form-group">
    <table class="table table-striped">
        <tr>
            <th>Tên khuyến mãi</th>
            <th>Thời gian bắt đầu</th>
            <th>Thời gian kết thúc</th>
            <th>Giá trị(%)</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianBatDau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaTri)
                </td>
            </tr>
        }
    </table>
</div>
